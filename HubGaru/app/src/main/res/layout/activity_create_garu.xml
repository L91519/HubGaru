<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="가루 생성" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold"
            android:text="허브들을 담는 가루를 생성합니다."/>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="가루 이름"/>
            <EditText
                android:id="@+id/new_garu_name"
                android:layout_marginTop="5dp"
                android:layout_height="30dp"
                android:layout_width="160dp"
                android:background="@drawable/linebox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="소개"/>
            <EditText
                android:id="@+id/new_garu_intro"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/linebox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="커버 이미지"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/linebox"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/new_garu_image"
                    android:layout_margin="15dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="@drawable/common_google_signin_btn_icon_dark_disabled"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <Button
                    android:id="@+id/cancle_garu_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@color/cardview_light_background"
                    android:text="취소" />

                <Button
                    android:id="@+id/create_garu_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@color/DrawerItem"
                    android:textColor="@color/colorPrimary"
                    android:text="생성"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>